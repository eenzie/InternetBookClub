@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper umbracoHelper

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Cozy Books - Your Literary Community</title>

    <!-- References -->
    <!-- Custom CSS -->
    <link rel="stylesheet" href='@Url.Content("~/css/myStylesheets/CustomerCSS.css")' />

    <!-- Bootstrap CSS & JS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
</head>
<body class="bg-dark text-white" style="padding-bottom: 20px; padding-top: 20px;">
    <!-- Navigation -->
    @await Html.PartialAsync("myviews/Navigation")

    <div class="container-fluid p-5 bg-dark text-white">

        <!-- Renders child content -->
        @RenderBody()

    </div>
</body>
<footer class="container-fluid p-5">
    @Model.Value("footer")
</footer>